from dotenv import load_dotenv
import os


# 定义环境变量
env_vars = {
    'ANTHROPIC_API_KEY': 'SSH-GLMR'
    # 添加其他环境变量...
}

# 打开一个文件用于写入
with open('.env', 'w') as file:
    for key, value in env_vars.items():
        # 写入环境变量到文件
        file.write(f'{key}={value}\n')
        


# 加载.env文件中的环境变量
load_dotenv()

# 获取环境变量
api_key = os.getenv('ANTHROPIC_API_KEY')
